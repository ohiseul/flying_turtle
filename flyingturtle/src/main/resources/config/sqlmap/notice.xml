	<!-- 페이징 + 검색  -->
 	<select id="selectListNotice" parameterType="page" resultType="notice">
 	     select  a.board_no, a.title, a.reg_date, b.name, a.view_cnt
		   from tb_notice a
		  inner join tb_member b
		     on a.member_no = b.member_no
		   <trim prefix="where" prefixOverrides="and|or">
		  	<if test="keyword != null and keyword !=' '">
		  		a.title like ('%',#{keyword},'%')
		  		or b.name like ('%',#{keyword},'%')
		  	</if>
		  </trim>	
		  order by a.board_no desc 
		  limit #{begin}, #{listSize}
	</select>  
	
	<!-- <where>
		  	<if test="keyword != null and keyword !=' '">
		  		and (a.title like '%', #{keyword},'%'
		  		or b.name like '%',#{keyword},'%')
		  	</if>
		  </where> -->	
	<!-- 전체게시물 개수 조회 -->
	<select id="selectNoticeCount" resultType="int">
		select count(*)
		  from tb_notice
		 <trim prefix="where" prefixOverrides="and|or">
		  	<if test="keyword != null and keyword !=' '">
		  		a.title like ('%',#{keyword},'%')
		  		or b.name like ('%',#{keyword},'%')
		  	</if>
		  </trim>	
	</select>
	
	<!-- 공지사항 상세조회 -->
	<select id="selectDetailNotice" parameterType="int" resultType="notice"> 
		select a.board_no, a.title, a.reg_date, b.name, a.view_cnt, a.content
		  from tb_notice a
		 inner join tb_member b
		    on a.member_no = b.member_no
		 where board_no = #{boardNo}
	</select>
	
	<!-- 공지사항 삭제 -->
	<delete id="deleteNoticeByNo" parameterType="int">
		delete 
		  from tb_notice
		 where board_no = #{boardNo}
	</delete>
	
	<!-- 조회수 증가 -->
	<update id="updateViewCnt" parameterType="int">
		 update tb_notice
		    set view_cnt = view_cnt +1
		  where board_no = #{boardNo}
	</update>
	
	<!-- 글 수정  -->
	<update id="updateNotice" parameterType="notice">
		update tb_notice
		   set title = #{title},
		       content = #{content},
		       file_group_no = #{fileGroupNo}
		 where board_no = #{boardNo}
	</update>
	

</mapper>