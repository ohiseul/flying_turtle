<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.flyingturtle.repository.mapper.CanvasMapper">
	<!-- 과목명 전체조회============================================================ -->
	<select id="selectListSubject" resultType="canvas">
		select *
		  from tb_can_subject
	</select>

    <!-- 과목명 등록 -->
    <insert id="insertSubject" parameterType="canvas" useGeneratedKeys="true" keyProperty="sbjNo">
        insert into tb_can_subject(sbj_name)
        values(#{sbjName})
    </insert>
    
	<!-- 과목명 수정 -->
	<update id="updateSubject" parameterType="canvas">
		update tb_can_subject
		   set sbj_name =#{sbjName}
		 where sbj_no = #{sbjNo}
	</update>
	
	<!-- 소과목명 전체조회 -->
	<select id="selectListSmallSub" resultType="canvas">
		select *
		  from tb_can_ssubject
	</select>
	
	<!-- 과목명 삭제 -->
	<delete id="deleteSubject" parameterType="canvas">
		delete
		  from tb_can_subject
		 where sbj_no = #{sbjNo}
	</delete>
	
    <!-- 소과목 등록 -->
    <insert id="insertSmallSubject" parameterType="canvas" useGeneratedKeys="true" keyProperty="ssbjNo">
        insert into tb_can_ssubject(sbj_no,ssbj_name)
        values (#{sbjNo},#{ssbjName})
    </insert>
    
    <!-- 소과목 수정 -->
    <update id="updateSmallSubject" parameterType="canvas">
    	update tb_can_ssubject
    	   set ssbj_name = #{ssbjName}
    	 where ssbj_no = #{ssbjNo}
    </update>
    
	<!-- 소과목명 삭제 -->
	<delete id="deleteSmallSubject" parameterType="int">
		delete 
		  from tb_can_ssubject
		 where ssbj_no = #{ssbjNo}
	</delete>
	<!-- 과목번호에 해당하는 이름 가져오기 -->
	<select id="selectSubName" parameterType="int" resultType="canvas">
		select sbj_name
		  from tb_can_subject
		  where sbj_no = #{sbjNo}
	<!-- 소과목번호에 해당하는 이름 가져오기 -->
	</select>
		<select id="selectSsubName" parameterType="int" resultType="canvas">
		select ssbj_name
		  from tb_can_ssubject
		 where ssbj_no = #{ssbjNo}
	</select>
	
	
	<!-- 이미지 리스트 조회======================================================== -->
 	<select id="selectCanvas" parameterType="canvas" resultType="canvas">
   	   select *
		from tb_canvas
		where ssbj_no = #{ssbjNo}
		limit #{begin}, #{listSize}
    </select>

   <!--글등록  -->
	<insert id="insertCanvas" parameterType="canvas" >
		insert into tb_canvas( 
			ssbj_no, sys_name, ori_name, path, size, title
		) values (
			#{ssbjNo},#{sysName},#{oriName},#{path},#{size},#{title}
		)
	</insert>
	<!-- 글삭제 -->
	<delete id="deleteCanvas" parameterType="int">
    	delete 
    	  from tb_canvas
    	 where can_no = #{canNo}
    </delete>    
    
    <!-- 글수정 -->
    <update id="updateCanvas" parameterType="canvas">
    	update tb_canvas
    	   set 	title = #{title},
    	       	content = #{content}
    	 where can_no = #{canNo}
    </update>
    

        <!-- 전체 글 갯수 -->
    <select id="selectCount" resultType="int">
    	select count(*)
    	  from tb_canvas 
    </select>
    
    <!-- 글상세정보 가져오기  -->
    <select id="selectCanvasByNo" parameterType="int" resultType="canvas">
		select *
		  from tb_canvas
		 where ssbj_no = #{ssbjNo}
    </select>	
    


</mapper>