<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.flyingturtle.repository.mapper.TodoMapper">

    <!--  1. 프로젝트 등록 (나중에 멤버도 받아야하니 일단 parameterType todo)  -->
	<insert id="insertProject" parameterType="todo" useGeneratedKeys="true" keyProperty="pjNo">
	  insert into flyingturtle.tb_project(title,member_no) 
	     values (#{title}, #{memberNo})
	</insert>

    <!-- 2. 프로젝트 리스트 조회 -->
    <select id="selectListProject" parameterType="int" resultType="todo">
	  select *
        from tb_project 
       where member_no = #{memberNo}
       order by title desc
    </select>
    
    <!-- 조회 추가 -->
    <select id="ListProject" parameterType="int" resultType="todo">
	  	select pj_no, title
		  from flyingturtle.tb_project
		    where member_no = #{memberNo}
		 order by title desc
    </select>
 

     <!-- 3. todo 리스트 조회  -->
 	<select id="selectListTodo" parameterType="todo" resultType="todo">
	 	 select t.todo_no, 
                  t.pj_no,
                  t.content, 
                  t.code_no, 
                  TO_DAYS(t.endday) - TO_DAYS(now()) AS deadline
           from flyingturtle.tb_todo t 
          inner join flyingturtle.tb_project p
             on t.pj_no = p.pj_no
          where t.member_no = #{memberNo}
            and t.pj_no = #{pjNo}
    </select>
    
    
    
    <!--4. 투두 등록   -->
	<insert id="insertTodo" parameterType="todo" useGeneratedKeys="true" keyProperty="pjNo">	
	   insert into flyingturtle.tb_todo( pj_no, content, endday, member_no) 
	     values ( #{pjNo}, #{content}, #{endDay}, #{memberNo})
	</insert>
  
	
	 <!-- 5. 투두 삭제   -->
	<delete id="deleteTodo" parameterType="int">
    	delete 
    	  from flyingturtle.tb_todo
    	 where todo_no = #{todoNo}
    </delete>
 	
     <!-- 6. 프로젝트 삭제 -->
	<delete id="deleteProject" parameterType="int">
    	delete 
    	  from flyingturtle.tb_project 
    	 where pj_no = #{pjNo}
    	 
    </delete>
    
     <!-- 7. 프로젝트 수정 -->
      <update id="finishTodo" parameterType="todo">
     	update tb_todo
	 	   set code_no = #{codeNo}
	 	  where todo_no = #{todoNo}
	 </update>
	 
     <!-- 프로젝트 수정 
    <update id="updateTodo" parameterType="qna">
    	update tb_question 
    	   set 	title = #{title},
    	   		code_no = #{codeNo},
    	       	content = #{content}
    	 where qna_no = #{qnaNo}
    </update>
-->
    
</mapper>