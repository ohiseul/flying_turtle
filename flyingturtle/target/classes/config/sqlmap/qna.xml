<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.flyingturtle.repository.mapper.QnaMapper">

	<!-- 전체 리스트 조회 -->
 	<select id="selectListQna" parameterType="page" resultType="qna">
   	   select *
		from tb_question 
		order by qna_no desc limit #{begin}, #{listSize}
    </select>
    <!-- 전체 글 갯수 -->
    <select id="selectCount" resultType="int">
    	select count(*)
    	  from tb_question 
    </select>
    <!-- 글상세정보 가져오기  -->
    <select id="selectQnaByNo" parameterType="int" resultType="qna">
select *
from tb_question
where qna_no = #{qnaNo}
    </select>	
<select id="selectFileByNo" parameterType="int" resultType="files">
select * 
from tb_file as f
inner join tb_question as q
on f.file_group_no = q.file_group_no
where f.file_group_no = #{file_group_no}
</select>
    
    <!-- 그룹번호 가져오기  -->  
   <select id="selectGroupNo" resultType="int">
   SELECT max(file_group_no) AS fileGroupNo FROM tb_file;
   </select> 
   <!--파일등록  -->
	<insert id="insertFile" parameterType="files" useGeneratedKeys="true" keyProperty="fileGroupNo">
		insert into tb_file(
		ori_name,sys_name,path,size,file_group_no
		) values (
		#{oriName},#{sysName},#{path},#{size},#{fileGroupNo}
		)
	</insert>

   <!--글등록  -->
	<insert id="insertQna" parameterType="qna" >
		insert into tb_question(
		code_no,
		member_no,
		title,
		type,
		content,
		file_group_no
		) values (
		1,
		1,
		#{title},
		'문의',
		#{content},
		#{fileGroupNo})
	</insert>
	<!-- 글삭제 -->
	<delete id="deleteQna" parameterType="int">
    	delete 
    	  from tb_question 
    	 where qna_no = #{qnaNo}
    </delete>    
    
    <!-- 글수정 -->
    <update id="updateQna" parameterType="qna">
    	update tb_question 
    	   set 	title = #{title},
    	       	content = #{content}
    	 where qna_no = #{qnaNo}
    </update>
    
    <!-- 조회수 증가시키기 -->
	<update id="updateDealViewCnt" parameterType="int">
		update tb_question
		   set view_cnt = view_cnt + 1
		 where qna_no = #{qnaNo}
	</update>
    
    <!-- 댓글 목록 -->
	<select id="selectCom" parameterType="int" resultType="qnaCom">
	    select *
	      from tb_qna_com
	     where qna_no = #{qnaNo}
	</select>
	
    <!-- 댓글 하나 가져오기 -->
	<select id="selectComByNo" parameterType="int" resultType="qnaCom">
	    select *
	      from tb_qna_com
	    where com_no = #{comNo}
	</select>
	
    <!-- 댓글 등록  -->
	<insert id="insertCom" parameterType="qnaCom">
		insert into tb_qna_com(
			`qna_no`, `type`, `member_no`, `content`
		) values (
			 #{qnaNo}, '문의', 1, #{content}
		)
	</insert>
	
	<!--  댓글 삭제  -->
	<delete id="deleteCom" parameterType="int">
	    delete 
	      from tb_qna_com
	     where com_no = #{comNo}
	</delete>
	
	<!--  댓글 수정  -->
	<update id="updateCom" parameterType="qnaCom">
	    update tb_qna_com
	       set content = #{content}
	     where com_no = #{comNo}
	</update> 	

	
	
	
	
	
	
</mapper>
























